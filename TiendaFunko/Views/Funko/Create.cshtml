@model TiendaFunko.Models.Funko

<main class="container">
    <h1 class="title-container-h1 title-create">CREAR NUEVO ITEM</h1>
    <form asp-action="Create" class="form-admin" method="post" enctype="multipart/form-data">
        <div class="form-admin__select">
            <label for="category">Categoría: </label>
            <select name="category" id="category">
                <option disabled selected>Seleccionar</option>
                <option value="star-wars"></option>
                <option value="pokemon"></option>
                <option value="harry-potter"></option>
            </select>
            <label asp-for="ClasificacionId">Licencia: </label>
            <select name="ClasificacionId" asp-items="ViewBag.ListaClasificacion"></select>
        </div>
        <div class="form-admin__product-details">
            <label asp-for="Name">Nombre del producto:</label>
            <input asp-for="Name" class="admin-input" type="text" id="Name" name="Name" placeholder="Nombre del producto">
        </div>
        <div class="form-admin__product-details">
            <textarea asp-for="Description" id="Description" cols="100" rows="10" placeholder="Descripción del producto"></textarea>
        </div>
        <div class="form-admin__product-details">
            <label asp-for="SKU"></label>SKU: <input class="admin-input" type="text" asp-for="SKU" name="sku" placeholder="SSK111AB001">
            <label asp-for="Price"></label>Precio: <input class="admin-input" asp-for="Price" name="price" type="text" placeholder="$ 0.000,00">
            <label asp-for="Stock"></label>Stock: <input class="admin-input" asp-for="Stock" type="text" placeholder="0">
        </div>
        <div class="form-admin__product-details">
            <label for="sku"></label>Descuento: <input class="admin-input" type="text" name="sku" placeholder="0%">
            <label for="cuotas">Cuotas: </label>
            <select name="cuotas" id="cuotas">
                <option value="">3 cuotas sin interés</option>
                <option value="">6 cuotas sin interés</option>
                <option value="">12 cuotas sin interés</option>
            </select>
        </div>
        <div class="form-admin__product-details">
            <label for="img">Imagen Sin Caja: </label>
            <input type="file" name="imgFile" id="img"><br/>
            <label for="imgCaja">Imagen Caja: </label>
            <input type="file" name="imgCajaFile" id="imgCaja">
        </div>
        <div class="form-admin__product-details">
            <input class="form-admin__btn" type="submit" value="Agregar producto">
            <input class="form-admin__btn" type="button" value="Limpiar">
        </div>
    </form>

</main>